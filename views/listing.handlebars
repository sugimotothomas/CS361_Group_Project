<style>
body {background-color: white;}

input[type=text] {
	border: 1px solid black;
	border-radius: 3px;
}

input[type=button], input[type=submit] {
    border-radius: 3px;
    background-color: #4CAF50;
    border: none;
    color: white;
    padding: 16px 32px;
    text-decoration: none;
    margin: 4px 2px;
    cursor: pointer;
}

input[type=reset] {
    background-color: #FF0000;
    border-radius: 3px;
    border: none;
    color: white;
    padding: 16px 32px;
    text-decoration: none;
    margin: 4px 2px;
    cursor: pointer;
}

select {
    width: 40%;
    padding: 16px 20px;
    border: 1px solid black;
    border-radius: 4px;
    background-color: #f1f1f1;
}

p    {color: black;}


* {
    box-sizing: border-box;
}

.row {
    display: flex;
}

/* Create two equal columns that sits next to each other */
.column {
    flex: 50%;
    padding: 10px;
}

.listing {


    border: 1px solid black;
    border-radius: 15px;
    width: 75%;
    margin: 15px;
}

</style>

<body>
<div class="listing">
<p>
<h1>Add Product</h1>
</P>
<FORM action="" method="post">
<div class="row">
  <div class="column">
    <P>
    Product Name:
    </P>
    <P>
   <select name="product" id="productName">
		<option>ANY</option>
		{{#if product}}
			{{#each product}}
				<option>
					{{this.productName}}
				</option>
			{{/each}}
		{{/if}}
	</select>
    </P>
    <P>
    Supplier ID:<br>
   	<select name="supplier" id="supplierName">
		<option>Select Supplier</option>
		{{#if supplier}}
			{{#each supplier}}
				<option>
					{{this.supplierName}}
				</option>
			{{/each}}
		{{/if}}
	</select>
    </P>
    <P>
    <select name="quantity">
  	<option value="Quantity">Quantity</option>
  	<option value="1">1</option>
  	<option value="2">2</option>
  	<option value="3">3</option>
<option value="4">4</option>
<option value="5">5</option>
<option value="6">6</option>
<option value="7">7</option>
    </select>
    </P>
    <P>
    Price ($):<BR>
    <INPUT type="text" name="price"><BR>
    </P>
    <P>
     Select image to upload:<BR>
    <input type="file" name="fileToUpload" id="fileToUpload"><BR>
  </div>
  <div class="column">
    <P>
    Expiration Date:
    </P>
    <P>
    <input type="date" data-date-size="4">
    </P>
    <P>
<BR>
<BR>
<BR>
<BR>
<BR>
<BR>
<BR>
    <div id="bottom-justified">
    <INPUT type="submit" value="Create"> <INPUT type="Reset"value="Cancel">
    </div>
    </P>
  </div>
</div>
</FORM>
</div>
</body>
